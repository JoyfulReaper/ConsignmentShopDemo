@model ConsignmentShopLibrary.Models.StoreModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-6">Store Details</h1>
<h2 class="h6">@Model.Name</h2>

<a class="btn btn-info" asp-controller="Stores" asp-action="POS" asp-route-storeId="@Model.Id">POS</a>
<a class="btn btn-info" asp-controller="Vendors" asp-action="Index" asp-route-storeId="@Model.Id">Vendors</a>
<a class="btn btn-info" asp-controller="Items" asp-action="Index" asp-route-storeId="@Model.Id">Items</a>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StoreBank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StoreBank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StoreProfit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StoreProfit)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
