@model ConsignmentShopLibrary.Models.VendorModel

@{
    ViewData["Title"] = "Vendor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-6">Details: @Model.FullName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Store
        </dt>
        <dd class="col-sm-10">
            @ViewData["Store"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommissionRate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommissionRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentDue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentDue)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index" asp-route-storeId="@Model.StoreId">Back to List</a>
</div>
