@model ConsignmentShopLibrary.Models.VendorModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-6">Add Vendor</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="StoreId" class="form-label"></label>
                <select asp-for="StoreId" class="form-control form-select" asp-items="ViewBag.StoreList"></select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CommissionRate" class="form-label"></label>
                <input asp-for="CommissionRate" class="form-control" />
                <span asp-validation-for="CommissionRate" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="mt-3 mb-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-storeId="@ViewBag.StoreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
