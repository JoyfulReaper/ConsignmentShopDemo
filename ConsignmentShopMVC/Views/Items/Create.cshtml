@model ConsignmentShopMVC.ViewModels.ItemCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-6">Add Item</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Item.StoreId" class="form-label"></label>
                <select asp-for="Item.StoreId" class="form-control form-select" asp-items="Model.Stores"></select>
                <span asp-validation-for="Item.StoreId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Item.Name" class="form-label"></label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Item.Description" class="form-label"></label>
                <textarea asp-for="Item.Description" class="form-control"></textarea>
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Item.Price" class="form-label"></label>
                <input asp-for="Item.Price" class="form-control" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Item.OwnerId" class="form-label"></label>
                <select asp-for="Item.OwnerId" class="form-control form-select" asp-items="Model.Vendors"></select>
                <span asp-validation-for="Item.OwnerId" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="mb-3 mt-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-StoreId="@Model.StoreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
